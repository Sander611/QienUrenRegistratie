@model IEnumerable<HoursPerDayModel>

@{
    ViewData["Title"] = "Controleren";
}

    <div class="row" style="margin-top:25px">
  
            <div class="col-sm" style="text-align:center">
                <img style="display: inline-block; padding-right: 10px; width: 35px; height:auto;" src="~/Images/arrow-circle-left-solid.svg" />
            </div>
            <div class="col-sm" style="text-align:center">
                <h1>@ViewBag.month (@ViewBag.year)</h1>
            </div>
            
            <div class="col-sm" style="text-align:center">
                <img style="display: inline-block; padding-left: 10px; width: 35px; height:auto;" src="~/Images/arrow-circle-right-solid.svg" />
            </div>
        
    </div>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Day) - @Html.DisplayNameFor(model => model.Month)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Hours)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.OverTimeHours)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsLeave)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsSick)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsLeave)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Other)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Reasoning)
            </th>
        </tr>
    </thead>
</table>

