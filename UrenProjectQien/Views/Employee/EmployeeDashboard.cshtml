@model Shared.Models.EmployeeDashboardModel;


@{
    ViewData["Title"] = "EmployeeDashboard";
}

    <div class="row">
        <div style="border: 3px solid #9A33F8;" class="col-md-2 rounded">
            <img style="margin-bottom:10px; text-align:center; width:180px; height:180px;" class="img-fluid" src="~/Images/ProfileImages/admin-icon.svg" />
            <table>
                <tbody>
                    <tr>
                        @if (Model.Account.IsTrainee == true)
                        {
                            <p style="text-align:center;">Trainee</p>
                        }
                        else if (Model.Account.IsQienEmployee == true)
                        {
                            <p style="text-align:center;">Medewerker</p>
                        }
                        else
                        {
                            <p style="text-align:center;">Senior Ontwikkelaar</p>
                        }
                    </tr>
                    <tr>
                        <p style="text-align:center;"> @Model.Account.FirstName @Model.Account.LastName</p>
                    </tr>
                </tbody>
            </table>
        </div>

        <div>
            <div class="col-md-1"></div>
        </div>

        <div class="col-md-8">
            <div style="margin-top:10px;" class="row">
                <div class="col">
                    <h1 style="text-align:center; margin-bottom:20px; background-color: #9A33F8; color: white;">Takenlijst</h1>
                    <table class="table">
                        <thead>
                            <tr>
                                <th>Taak</th>
                                <th>Deadline</th>
                                <th>Invullen</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var hourform in Model.Forms)
                            {
                                <tr>
                                    <td>
                                        Uren registratie @hourform.ProjectMonth @hourform.Year.ToString()
                                    </td>
                                    <td>
                                        @hourform.DateDue
                                    </td>
                                    <td>
                                        @Html.ActionLink("Uren Invoeren", "HoursRegistration", new { formId = hourform.FormId });
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>


        </div>
    </div>



     

            <div id="personalia">
                <h1 id="takenheader">Peronalia</h1>
                <table border="1">
                    <tbody>
                            <tr>
                                <td>Voornaam</td>
                                <td>@Model.Account.FirstName</td>

                            </tr>
                            <tr>
                                <td>Achternaam</td>
                                <td>@Model.Account.LastName</td>

                            </tr>

                            <tr>
                                <td>Adres</td>
                                <td>@Model.Account.Address</td>
                            </tr>

                            <tr>
                                <td>Postcode</td>
                                <td>@Model.Account.ZIP</td>
                            </tr>

                            <tr>
                                <td>Stad</td>
                                <td>@Model.Account.City</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            <div class="nieuws">
                <h1 id="takenheader">Nieuws</h1>
                <table>
                    <tbody>
                        @for (int i = 0; i < 5; i++)
                        {
                            <tr>
                                <td>Urenregistratie is goed gekeurd door Admin </td>

                            </tr>

                        }
                    </tbody>
                </table>
            </div>

        </div>
    
    
