@model IEnumerable<Shared.Models.ClientModel>

@{
    ViewData["Title"] = "Opdrachtgevers lijst";
    
}

    <html>

    <head >
        <style>
            table, th, td {
                border: 1px solid black;
                border-collapse: collapse;
                text-align: left;
                  border: 0;
                
            }
            table{
                margin-top: 100px; 
                width:80%;
                border: 0;
            }
            .button {
                border: none;
                background-color: #9A33F8;
                padding: 14px 40px;
                margin: 100px 5px;
                color: black;
                -webkit-transition-duration: 0.4s;
                transition-duration: 0.4s;
                margin-top: 100px;
                margin-top:50%;
            }
            thead{
                background-color: #9A33F8
            }
            th, td {
                padding: 40px;
            }
        </style>
    </head>
    <body>
        <div>
            <a href="createClient" class="button">Aanmaken</a>

        </div>
        <table style="width:100%;">
            <thead>
                <tr>
                    <th>Bedrijf</th>
                    <th>Contact Person 1</th>
                    <th>Contact Person 2</th>
                    <th>Details</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                <tr>
                    <td>
                        @item.CompanyName
                    </td>
                    <td>
                        @item.ClientName1
                    </td>
                    <td>
                        @item.ClientName2
                    </td>
                    <td>
                        @Html.ActionLink("Details", "ClientDetails", new { Id = item.ClientId})
                    </td>
                </tr>
                }
            </tbody>
        </table>
            </div>
    </body>
    </html>